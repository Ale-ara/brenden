    <script>
       
        const availableCursoss = ["ASO", "AVP", "AJ", "ASD", "EM", "AI"];

        // Coloquei os nomes de exemplos aq
        const cursossData = {
            "João Silva": ["ASO", "EM"],
            "Maria Santos": ["AVP", "AJ"],
            "Pedro Almeida": ["ASD"],
            "Carla Souza": ["AI"]
        };

        function searchCursoss() {
            const nickname = document.getElementById('nickname').value.trim();
            const cursossContainer = document.getElementById('cursossContainer');
            const formContainer = document.querySelector('.form-container');
            cursossContainer.innerHTML = '';  

         
            availableCursoss.forEach(cursos => {
                const cursosTag = document.createElement('div');
                cursosTag.className = 'cursos-tag';
                cursosTag.textContent = cursos;
                
             
                if (nickname !== '' && cursossData.hasOwnProperty(nickname) && cursossData[nickname].includes(cursos)) {
                    cursosTag.classList.add('received');
                }

                cursossContainer.appendChild(cursosTag);
            });

            // Mostra o contêiner de cursos
            formContainer.classList.add('collapsed');
            setTimeout(() => {
                document.querySelector('.cursoss-container').classList.add('visible');
            }, 300);
        }

        function updateAvatar() {
            const nickname = document.getElementById('nickname').value.trim().toLowerCase();
            const avatarContainer = document.getElementById('avatarContainer');

            // imagens merda
            const avatarImages = {
                "joão silva": "https://i.imgur.com/6VtSh9V.png",
                "maria santos": "https://i.imgur.com/WScXsPM.png",
                "pedro almeida": "https://i.imgur.com/AsiR8Xe.png",
                "carla souza": "https://i.imgur.com/Bixap9w.png"
            };
            if (nickname) {
    avatarContainer.style.backgroundImage = `url(https://www.habbo.com.br/habbo-imaging/avatarimage?img_format=png&user=${nickname}&direction=3&head_direction=3&size=l&gesture=sml&action=wlk)`;
} else {
    avatarContainer.style.backgroundImage = 'none';
}

        }
    </script>
