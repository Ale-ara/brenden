    <div class="container">
        <img src="https://i.imgur.com/u2kuurE.png" alt="Logo" class="logo">
        <div class="form-container">
            <form id="searchForm">
                <div class="inputGroup">
                  
                    <div class="row">
                        <div class="avatar" id="avatarContainer"></div>
                        <input type="text" id="nickname" name="nickname" placeholder="Insira o nickname do aluno." oninput="updateAvatar()">
                        <button type="button" onclick="searchCursoss()">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="cursoss-container" id="cursossContainer">
          
